{
  "name": "hashtree-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "HashTree monorepo",
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "wrtc"
    ]
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:hashtree": "pnpm --filter hashtree build",
    "build:web": "pnpm --filter hashtree-web build",
    "dev": "pnpm --filter hashtree-web dev",
    "test": "pnpm --filter hashtree test",
    "test:watch": "pnpm --filter hashtree test:watch",
    "test:e2e": "playwright test",
    "lint": "eslint packages/hashtree/src packages/hashtree-web/src",
    "lint:fix": "eslint packages/hashtree/src packages/hashtree-web/src --fix"
  },
  "devDependencies": {
    "@esbuild/linux-arm64": "^0.27.0",
    "@nostr-dev-kit/ndk": "^2.18.1",
    "@playwright/test": "^1.57.0",
    "@rollup/rollup-linux-arm64-gnu": "^4.53.3",
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "nostr-tools": "^2.18.2",
    "typescript": "^5.3.0",
    "ws": "^8.18.3"
  }
}
